<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/schedule_icon"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/ic_fill_hotel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/schedule_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:text="Hotel Check-In • MBS"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toStartOf="@id/action_button"
            app:layout_constraintStart_toEndOf="@id/schedule_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/schedule_subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="3:00 PM • Confirmation #SJX439"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="@id/schedule_title"
            app:layout_constraintStart_toStartOf="@id/schedule_title"
            app:layout_constraintTop_toBottomOf="@id/schedule_title" />

        <Button
            android:id="@+id/action_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Map"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>