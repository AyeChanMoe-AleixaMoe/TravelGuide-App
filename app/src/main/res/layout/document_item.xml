<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/document_icon"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@android:drawable/ic_menu_agenda"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/document_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:text="Passport &amp; Visas"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toStartOf="@id/open_button"
        app:layout_constraintStart_toEndOf="@+id/document_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/document_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Secure â€¢ PIN Enabled"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="@id/document_title"
        app:layout_constraintStart_toStartOf="@id/document_title"
        app:layout_constraintTop_toBottomOf="@id/document_title" />

    <Button
        android:id="@+id/open_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>